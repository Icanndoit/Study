import java.util.Scanner;
import java.util.Arrays;

public class Main 
{
    public static void main(String[] args) 
    {
        Scanner input = new Scanner(System.in);
        
        int N = input.nextInt();  // 달걀 개수
        int M = input.nextInt();  // 고객 수
        
        int[] arr = new int[M];
        
        for (int i = 0; i < M; i++)
            arr[i] = input.nextInt();

        int[] sorted = arr.clone();   // 복제
        Arrays.sort(sorted);

        int profit = 0;
        int value = 0;
        
        for (int i = 0; i < M; i++) {
            // 팔 수 있는 개수 = min(남은 고객 수, 달걀 개수)
            int canSell = Math.min(M - i, N);
            int compare = sorted[i] * canSell;
            
            if (compare > profit) {
                profit = compare;
                value = sorted[i];
            }
        }
        
        System.out.println(value + " " + profit);


    }
}
