lst = []
n, maximum = map(int, input().split())

for i in range(n):
    weight, value = map(int, input().split())
    lst.append((weight, value))

dp = [0] * (maximum + 1)

for i in range(n):
    weight, value = lst[i]
    # 앞에서부터 갱신하는 경우, 임시 배열을 사용
    new_dp = dp[:]  # 이전 상태를 복사
    for w in range(weight, maximum + 1):
        new_dp[w] = max(dp[w], dp[w - weight] + value)
    dp = new_dp  # 갱신 후 덮어쓰기

print(max(dp))
