n = int(input())
number = [*map(int, input().split())]
dplower, dpupper = [1], [1]

for i in range(1, n, 1):
    if number[i - 1] < number[i]:  # 증가
        dpupper.append(dpupper[i - 1] + 1)
        dplower.append(1)
    elif number[i - 1] > number[i]:  # 감소
        dplower.append(dplower[i - 1] + 1)
        dpupper.append(1)
    else:
        dplower.append(dplower[i - 1] + 1)
        dpupper.append(dpupper[i - 1] + 1)

print(max( max(dplower), max(dpupper) ))
