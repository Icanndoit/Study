package Practice;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Information con = new Information();
        Scanner input = new Scanner(System.in);

        System.out.print("이름 입력 : ");  con.name = input.nextLine();  // 공백 문자열 포함해서 입력
        System.out.print("나이 입력 : ");  con.age = input.nextInt();
        System.out.print("키 입력 : "); con.height = input.nextDouble();
        System.out.print("몸무게 입력 : ");  con.weight = input.nextDouble();
        System.out.print("혈액형 입력 : ");  con.blood = input.next();  // 공백 문자열은 입력 X

        System.out.println();
        con.ShowInformation();
    }
}
